<div class="container mt-5">
  <div class="text-center">
    <h1>URL Shortener</h1>
  </div>
  <div class="mt-5 fs-1  text-center">
    <i class="fas fa-link"></i>
  </div>
  <div class="mt-4">
    <form action="/shortUrls" method="POST" id="form" novalidate>
      <div class="mb-3 form-group w-50 mx-auto">
        <input type="url" class="form-control" name="fullURL" id="url" placeholder="URL" required>
        <div class="valid-feedback">OK!</div>
        <div class="invalid-feedback">This field is required.</div>
      </div>
      <div class="d-flex">
        <button type="submit" class="btn btn-outline-primary mx-auto" id="submit-button">Shorten</button>
      </div>
    </form>
    {{#if shortUrls}}
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each shortUrls}}
          <tr>
            <td>
              <a href="{{ this.full }}">
                {{fullIsTooLong this.full}}
              </a>
            </td>
            <td>
              <a href="{{ this.short }}">
                {{../heroku}}{{this.short }}
              </a>
            </td>
            <td>
              <form action="/shortUrls/{{this._id}}/?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-primary">delete</button>
              </form>
            </td>
          </tr>
          {{/each }}
      </tbody>
    </table>
    {{/if}}
  </div>
</div>